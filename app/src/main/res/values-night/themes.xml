<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LLMInference" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material3 color attributes -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/tertiary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/tertiary_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <item name="colorTertiary">@color/tertiary_light</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/tertiary</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        
        <item name="android:colorBackground">@color/tertiary_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/tertiary_dark</item>
        <item name="colorOnSurface">@color/white</item>
        
        <item name="colorSurfaceVariant">@color/tertiary</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOutline">@color/primary_light</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@color/tertiary_dark</item>
        <item name="android:navigationBarColor">@color/tertiary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
